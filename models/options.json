        "optimizer":{
            "type": "SGD",
            "params": {
                "lr":0.01,
                "weight_decay":0.0001,
                "momentum":0.9,
                "nesterov":true
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    }
 }
