{
    "general":{
        "gpus": [2, 3],
        "batch_size":36,
        "shuffle":true,
        "epochs":35,
        "media_type": "ftrs"
    },
    "img":{
        "embedder": "ResNext",
        "optimizer":{
            "type":"Over9000",
            "params": {
                "lr":0.01,
                "weight_decay":0.001
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.8
        }
    },
    "txt":{
        "mean": "avg",
        "pmean": ["mean", "max", "min"],
        "embedder": "ELMo",
        "optimizer":{
            "type": "Over9000",
            "params": {
                "lr":0.01,
                "weight_decay":0.001
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    },
    "both":{
        "optimizer":{
            "type": "SGD",
            "params": {
                "lr":0.01,
                "weight_decay":0.001,
                "momentum":0.9,
                "nesterov":true
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    },
    "ftrs":{
        "embedder": "MLPClassifier",
        "features": "both",
        "optimizer":{
            "type": "Over9000",
            "params": {
                "lr":0.01,
                "weight_decay":0.001
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    }
 }
