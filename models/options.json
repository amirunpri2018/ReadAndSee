{
    "general":{
        "gpus": [7],
        "batch_size": 32,
        "shuffle":true,
        "epochs":30,
        "media_type": "txt",
        "class_model": "MeanTxtClassifier"
    },
    "img":{
        "img_embedder": "resnext",
        "optimizer":{
            "type":"SGD",
            "params": {
                "lr":0.0001,
                "weight_decay":0.001,
                "nesterov": true,
                "momentum": 0.9
            }
        },
        "scheduler":{
            "step_size":5,
            "gamma":0.8
        }
    },
    "txt":{
        "mean": "pmean",
        "pmean": ["mean", "max", "min"],
        "txt_embedder": "elmo",
        "LSTM": false,
        "optimizer":{
            "type": "SGD",
            "params": {
                "lr":0.01,
                "weight_decay":0.001,
                "nesterov": true,
                "momentum": 0.9
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    },
    "both":{
        "mean": "pmean",
        "pmean": ["mean", "max", "min"],
        "txt_embedder": "elmo",
        "img_embededer": "resnet34",
        "LSTM": false,
        "optimizer":{
            "type": "SGD",
            "params": {
                "lr":0.01,
                "weight_decay":0.001,
                "momentum":0.9,
                "nesterov":true
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    },
    "ftrs":{
        "features": "txt_ftrs",
        "optimizer":{
            "type": "SGD",
            "params": {
                "lr":0.01,
                "weight_decay":0.001,
                "momentum":0.9,
                "nesterov":true
            }
        },
        "scheduler":{
            "step_size":7,
            "gamma":0.85
        }
    }
 }
